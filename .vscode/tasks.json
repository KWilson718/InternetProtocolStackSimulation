{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file with layers",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                // Main file (e.g. main.cpp)
                "${file}",

                // Other source files
                "layers/application.cpp",
                "layers/link.cpp",
                "layers/transport.cpp",
                "layers/network.cpp",

                // Include path for headers
                "-Ilayers",

                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\msys64\\ucrt64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the active file along with layers/*.cpp"
        }
    ]
}
